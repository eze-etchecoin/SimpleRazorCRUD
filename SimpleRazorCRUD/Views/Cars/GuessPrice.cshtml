@using SimpleRazorCRUD.Models.Cars

@section Scripts{
    <script src="~/js/Cars/GuessPrice.js" asp-append-version="true"></script>
}

@model CarModel

<input hidden asp-for="Id" id="id" />

<h1 class="display-6">Guessing price of (@Model.Year) @Model.Make @Model.Model</h1>
<p>Can you guess what the price of this car is? Test your luck. You have a margin of error of +/- 5.000.</p>

<div class="row">
    <div class="col-2">
        <label for="guess">Enter a price:</label>
        <input type="number" id="guess" class="form-control" />
    </div>
</div>

<div class="row">
    <div class="col-2">
        <button type="button" class="btn btn-primary" onclick="submitPriceGuess()">Submit</button>
    </div>
</div>

<div class="row d-none" id="alertSuccess">
    <div class="col-4">
        <div class="alert alert-success">
            Great job! Price is @Model.Price
        </div>
    </div>
</div>

<div class="row d-none" id="alertError">
    <div class="col-4">
        <div class="alert alert-danger">
            Wrong price! Try again.
        </div>
    </div>
</div>

<div class="row d-none" id="alertServerError">
    <div class="col-4">
        <div class="alert alert-danger">
            Oops... Something went wrong. Try again.
        </div>
    </div>
</div>